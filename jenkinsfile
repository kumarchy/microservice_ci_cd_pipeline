pipeline {
    agent any

    environment {
        // Define MONGO_URI here so it's available throughout the pipeline
        MONGO_URI = 'mongodb://mongo:27017/microservices'
    }

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main', url: 'https://github.com/kumarchy/microservice_ci_cd_pipeline'
            }
        }

        stage('Build & Run Containers') {
            steps {
                script {
                    // Create all environment files first
                    writeFile file: 'auth-service/.env', text: """
                    PORT = 3001
                    JWT_SECRET = MICROSERVICE_JWT_SECRET
                    DATABASE_URL=postgresql://postgres:root@authPostgresDB:5432/authDB?schema=public
                    """

                    writeFile file: 'product-service/.env', text: """
                    PORT = 3002
                    MONGO_URI=${MONGO_URI}
                    """

                    writeFile file: 'order-service/.env', text: """
                    PORT = 3003
                    DATABASE_URL=postgresql://postgres:root@orderPostgresDB:5432/orderDB?schema=public
                    """

                    writeFile file: 'gateway/.env', text: """
                    PORT=3000
                    AUTH_SERVICE_URL=http://auth-service:3001
                    PRODUCT_SERVICE_URL=http://product-service:3002
                    ORDER_SERVICE_URL=http://order-services:3003
                    """

                    // Run docker-compose with the environment variable
                    withEnv(["MONGO_URI=${MONGO_URI}"]) {
                        sh 'docker-compose up -d --build'
                    }
                }
            }
        }
    }
}